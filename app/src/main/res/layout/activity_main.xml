<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Bill Amount Below:" />

    <EditText
        android:id="@+id/et_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="100.00"
        android:inputType="numberDecimal"
        android:text="" />

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/textView2"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip%" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        
        <Button
            android:id="@+id/button_tip_minus"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:text="-"
            android:textSize="32dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/tv_tip"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="0%" />

        <Button
            android:id="@+id/button_tip_plus"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:text="+"
            android:textSize="32dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:layout_margin="20dp"
        android:id="@+id/textView3"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="People" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_people_minus"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="32dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/people"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:id="@+id/button_people_plus"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="32dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/button_calculate"
        android:layout_marginTop="20dp"
        android:textSize="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="Calculate" />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip" />

    <TextView
        android:id="@+id/tv_tip_output"
        android:layout_marginTop="20dp"

        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0%" />

    <TextView
        android:id="@+id/textView5"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total" />

    <TextView
        android:id="@+id/tv_total_output"
        android:layout_marginTop="20dp"

        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.00" />


    <TextView
        android:id="@+id/textView6"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiter's Total" />

    <TextView
        android:id="@+id/waiter_total"
        android:layout_marginTop="20dp"

        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.00" />

</LinearLayout>

</ScrollView>